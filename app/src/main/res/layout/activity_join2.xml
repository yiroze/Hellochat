<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity_Join2"
    >
<androidx.constraintlayout.widget.ConstraintLayout
android:layout_width="match_parent"
android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="@+id/mylang"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/mylang"
        app:layout_constraintTop_toBottomOf="@+id/mylang">

        <Spinner
            android:id="@+id/mylang_spinner"
            android:layout_width="300dp"
            android:layout_height="35dp"
            android:background="@drawable/spinner_background"
            android:spinnerMode="dropdown" />


        <LinearLayout
            android:id="@+id/mylang_layout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:visibility="gone">

            <Spinner
                android:id="@+id/mylang_spinner2"
                android:layout_width="300dp"
                android:layout_height="35dp"
                android:background="@drawable/spinner_background"
                android:spinnerMode="dropdown" />

            <ImageView
                android:id="@+id/mylang_spinner2_bnt"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:src="@drawable/delete" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/mylang_layout3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:visibility="gone">

            <Spinner
                android:id="@+id/mylang_spinner3"
                android:layout_width="300dp"
                android:layout_height="35dp"
                android:background="@drawable/spinner_background"
                android:spinnerMode="dropdown" />

            <ImageView
                android:id="@+id/mylang_spinner3_bnt"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:src="@drawable/delete" />

        </LinearLayout>


    </LinearLayout>

    <TextView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="가입"
        android:textColor="@color/black"
        android:textSize="100px"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.084"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.036" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile"
        android:layout_width="100dp"
        android:layout_height="100dp"

        android:layout_gravity="center"
        android:layout_marginTop="4dp"
        android:src="@drawable/no_porifile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo"
        />


    <ImageView
        android:id="@+id/plus"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="160dp"
        android:src="@drawable/plus"
        app:layout_constraintEnd_toEndOf="@+id/profile"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/profile"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/mylang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="212dp"
        android:text="모국어"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.045"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/mylang_plus"
        android:layout_width="25dp"
        android:layout_height="25sp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:src="@drawable/blue_plus"
        app:layout_constraintBottom_toBottomOf="@+id/mylang"
        app:layout_constraintStart_toEndOf="@+id/mylang"
        app:layout_constraintTop_toTopOf="@+id/mylang"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/study_lang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="학습언어"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout4"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/linearLayout4"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout4" />

    <ImageView
        android:id="@+id/study_lang_plus"
        android:layout_width="25dp"
        android:layout_height="25sp"
        android:src="@drawable/blue_plus"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/study_lang"
        app:layout_constraintStart_toEndOf="@+id/study_lang"
        app:layout_constraintTop_toTopOf="@+id/study_lang" />

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="@+id/study_lang"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/study_lang"
        app:layout_constraintTop_toBottomOf="@+id/study_lang">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Spinner
                android:id="@+id/study_lang_spinner"
                android:layout_width="200dp"
                android:layout_height="35dp"
                android:background="@drawable/spinner_background"
                android:spinnerMode="dropdown" />

            <Spinner
                android:id="@+id/level_spinner"
                android:layout_width="100sp"
                android:layout_height="35dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/spinner_background"
                android:spinnerMode="dropdown" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/study_lang_layout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:visibility="gone">

            <Spinner
                android:id="@+id/study_lang_spinner2"
                android:layout_width="200dp"
                android:layout_height="35dp"
                android:background="@drawable/spinner_background"
                android:spinnerMode="dropdown" />

            <Spinner
                android:id="@+id/level_spinner2"
                android:layout_width="100sp"
                android:layout_height="35dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/spinner_background"
                android:spinnerMode="dropdown" />

            <ImageView
                android:id="@+id/study_lang_bnt2"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:src="@drawable/delete" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/study_lang_layout3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:visibility="gone">

            <Spinner
                android:id="@+id/study_lang_spinner3"
                android:layout_width="200dp"
                android:layout_height="35dp"
                android:background="@drawable/spinner_background"
                android:spinnerMode="dropdown" />

            <Spinner
                android:id="@+id/level_spinner3"
                android:layout_width="100sp"
                android:layout_height="35dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/spinner_background"
                android:spinnerMode="dropdown" />

            <ImageView
                android:id="@+id/study_lang_bnt3"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:src="@drawable/delete" />

        </LinearLayout>


    </LinearLayout>


    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="자기소개"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout5"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/linearLayout5"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout5" />

    <EditText
        android:id="@+id/introduce"
        android:layout_width="378dp"
        android:layout_height="147dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/editext_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.484"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Button
        android:id="@+id/next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="92dp"
        android:text="가입하기"
        app:backgroundTint="#03A9F4"
        app:layout_constraintEnd_toEndOf="@+id/introduce"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/introduce"
        app:layout_constraintTop_toBottomOf="@+id/introduce" />

    <ImageView
        android:id="@+id/qusetion_mark"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:src="@drawable/question"
        app:layout_constraintBottom_toBottomOf="@+id/study_lang_plus"
        app:layout_constraintStart_toEndOf="@+id/study_lang_plus"
        app:layout_constraintTop_toTopOf="@+id/study_lang_plus"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
